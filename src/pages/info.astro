---
import Layout from '../layouts/Layout.astro';

const newsItems = [
  {
    title: "Pola Makan untuk Penderita Diabetes",
    excerpt: "Kenali makanan yang aman dikonsumsi sehari-hari agar kadar gula tetap terkontrol.",
    image: "/images/news1.jpg",
    link: "#"
  },
  ...
];
---

<Layout title="Info Terkait">
  <section class="max-w-6xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-10">Info Terkait</h1>

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {newsItems.map((item) => (
        <a href={item.link} class="group block bg-white/5 rounded-2xl shadow-md overflow-hidden hover:-translate-y-1 hover:shadow-xl transition">
          <img src={item.image} alt={item.title} class="w-full h-48 object-cover group-hover:opacity-90 transition" />
          <div class="p-6">
            <h2 class="text-xl font-semibold mb-2 group-hover:text-primary transition">{item.title}</h2>
            <p class="text-sm text-gray-300">{item.excerpt}</p>
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>
